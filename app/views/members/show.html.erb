<div class="bg-slate-900 w-screen rounded-xl p-5 mt-5">

  <div class="flex justify-between  items-center m-5">
    <h1 class="text-slate-400 text-3xl m-3">
      <%= @member.name %>
    </h1>
    <div>
      <%= link_to "Back", :back, class: "bg-transparent hover:bg-slate-500 text-slate-400 font-semibold hover:text-white py-2 px-4 mt-5 border border-slate-500 hover:border-transparent rounded" %>
      <%= link_to "Edit", edit_member_path(@member), class: 'bg-transparent hover:bg-slate-500 text-slate-400 font-semibold hover:text-white py-2 px-4 border border-slate-500 hover:border-transparent rounded' %>
    </div>
  </div>

  <div class="flex justify-center">
    <div class="flex items-center m-5">
      <h1 class="text-slate-400 text-4xl"> <%= @member.winrate.wins.to_i %> </h1>
      <%= image_tag "battle_pvp_icon_win" %>
    </div>
    <div class="flex items-center m-5">
      <h1 class="text-slate-400 text-4xl"> <%= @member.winrate.draws.to_i %> </h1>
      <%= image_tag "battle_pvp_icon_lose" %>
    </div>
    <div class="flex items-center m-5">
      <h1 class="text-slate-400 text-4xl"> <%= @member.winrate.loses.to_i %> </h1>
      <%= image_tag "battle_pvp_icon_lose" %>
    </div>
  </div>

  <div>
    <p class="text-slate-400 text-xl m-3">
      Joined day: <%= @member.joined.strftime("%d/%m/%Y") %>
    </p>
  </div>
</div>
