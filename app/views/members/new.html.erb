<div class="bg-slate-900 h-fit w-fit rounded-xl p-5 mt-5 mx-auto">
  <div>
    <%= form_for( @member , remote: true) do |f| %>
      <%= f.label :name, "Name", class: "block text-sm font-medium leading-6 text-slate-400" %>
      <%= f.text_field :name, class: "block w-full rounded-md border-0 py-1.5 pl-5 pr-20 text-gray-900 ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" %>

      <%= f.label :joined, "Joined", class: "block text-sm font-medium leading-6 text-slate-400 mt-5" %>
      <%= f.date_field :joined, class: "block w-full rounded-md border-0 py-1.5 pl-5 text-gray-900 ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6"%>

      <div>
        <%= f.button :submit, class: 'bg-transparent hover:bg-slate-500 text-slate-400 font-semibold hover:text-white py-2 px-4 mt-5 border border-slate-500 hover:border-transparent rounded' %>
        <%= link_to "Back", :back, class: 'bg-transparent hover:bg-red-500 text-red-400 font-semibold hover:text-white py-2 px-4 mt-5 border border-red-500 hover:border-transparent rounded' %>
      </div>
    <% end %>
  </div>
</div>
